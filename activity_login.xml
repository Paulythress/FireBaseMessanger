<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/holo_green_dark">
    <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="33dp" android:id="@+id/Email"
            android:hint="Email" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:background="@android:color/background_light"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="84dp" android:id="@+id/Password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/Email"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:background="@android:color/background_light"
            app:layout_constraintHorizontal_bias="1.0" android:hint="Password"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="135dp"
            android:id="@+id/GotoLogin" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Back to Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="141dp" android:id="@+id/Back_To_Registration_View"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/GotoLogin"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>
</android.support.constraint.ConstraintLayout>